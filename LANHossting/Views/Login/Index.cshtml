@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đăng nhập - VMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Plus+Jakarta+Sans:wght@700;800&display=swap"
    rel="stylesheet">
  <style>
    :root {
      --primary: #4361ee;
      --primary-dark: #3a0ca3;
      --secondary: #4cc9f0;
      --success: #10b981;
      --danger: #ef476f;
      --warning: #f59e0b;
      --border-radius: 16px;
      --card-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.05);
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #334155;
    }

    .login-card {
      background: white;
      border-radius: var(--border-radius);
      border: none;
      padding: 40px;
      box-shadow: 0 20px 40px -10px rgba(67, 97, 238, 0.15);
      width: 100%;
      max-width: 420px;
      animation: fadeIn 0.6s ease-out forwards;
      justify-content: center;
      align-items: center;
    }

    .login-card image {
      justify-content: center;
      align-items: center
    }

    @@keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .form-label {
      font-weight: 600;
      font-size: 0.9rem;
      color: #475569;
      margin-bottom: 8px;
    }

    .modern-input-group {
      display: flex;
      align-items: center;
      background: #f1f5f9;
      border-radius: 12px;
      border: 2px solid transparent;
      transition: all 0.3s ease;
      overflow: hidden;
    }

    .modern-input-group:focus-within {
      background: white;
      border-color: var(--primary);
      box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1);
    }

    .input-group-icon {
      padding: 12px 0 12px 16px;
      color: #64748b;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: color 0.3s ease;
    }

    .modern-input-group:focus-within .input-group-icon {
      color: var(--primary);
    }

    .custom-input {
      background: transparent;
      border: none;
      padding: 12px 16px;
      font-size: 0.95rem;
      color: #334155;
      flex-grow: 1;
    }

    .custom-input:focus {
      box-shadow: none;
      outline: none;
      background: transparent;
    }

    .password-toggle {
      cursor: pointer;
      padding: 12px 16px;
      color: #64748b;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
      border-left: 2px solid transparent;
    }

    .password-toggle:hover {
      color: var(--primary);
    }

    .password-toggle:active {
      transform: scale(0.95);
    }

    .modern-input-group:focus-within .password-toggle {
      color: var(--primary);
    }

    .btn-primary-modern {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
      border: none;
      color: white;
      border-radius: 12px;
      padding: 14px 20px;
      font-weight: 600;
      font-size: 1rem;
      box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
      transition: all 0.2s;
      width: 100%;
    }

    .btn-primary-modern:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px -5px rgba(67, 97, 238, 0.5);
    }

    .btn-primary-modern:active {
      transform: translateY(0);
    }

    .form-check-input {
      width: 1.2em;
      height: 1.2em;
      border-radius: 5px;
      border: 2px solid #cbd5e1;
      cursor: pointer;
    }

    .form-check-input:checked {
      background-color: var(--primary);
      border-color: var(--primary);
    }

    .custom-input:-webkit-autofill,
    .custom-input:-webkit-autofill:hover,
    .custom-input:-webkit-autofill:focus,
    .custom-input:-webkit-autofill:active {
      -webkit-box-shadow: 0 0 0 30px #e0f2fe inset !important;
      -webkit-text-fill-color: #334155 !important;
      transition: background-color 5000s ease-in-out 0s;
    }

    .modern-input-group.has-autofill {
      background: #e0f2fe;
      border-color: #38bdf8;
    }

    .modern-input-group.has-autofill .input-group-icon {
      color: #0284c7;
    }
  </style>
</head>

<body>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12 d-flex justify-content-center">

        <div class="login-card">
          <div class="text-center mb-4">
            <img src="~/image_2.png" alt="Tổng Công ty Bảo đảm An toàn Hàng hải Việt Nam" class="img-fluid mb-4"
              style="max-width: 100%; height: auto;">
          </div>

          <form id="loginForm" novalidate>
            <div class="mb-4">
              <label for="username" class="form-label">Tài khoản</label>
              <div class="modern-input-group">
                <span class="input-group-icon">
                  <i class="bi bi-person"></i>
                </span>
                <input type="text" class="form-control custom-input shadow-none" id="username"
                  placeholder="Nhập tên đăng nhập" required>
              </div>
              <div class="invalid-feedback ms-2" id="usernameFeedback">
                Vui lòng nhập tài khoản.
              </div>
            </div>

            <div class="mb-4">
              <label for="password" class="form-label">Mật khẩu</label>
              <div class="modern-input-group">
                <span class="input-group-icon">
                  <i class="bi bi-lock"></i>
                </span>
                <input type="password" class="form-control custom-input shadow-none" id="password"
                  placeholder="Nhập mật khẩu" required>
                <span class="password-toggle" onclick="togglePassword()">
                  <i class="bi bi-eye-slash" id="toggleIcon"></i>
                </span>
              </div>
              <div class="invalid-feedback ms-2" id="passwordFeedback">
                Vui lòng nhập mật khẩu.
              </div>
            </div>
            <button type="submit" class="btn btn-primary-modern">
              Đăng Nhập
            </button>
          </form>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Xử lý ẩn hiện mật khẩu
    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const toggleIcon = document.getElementById('toggleIcon');

      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.classList.remove('bi-eye-slash');
        toggleIcon.classList.add('bi-eye');
      } else {
        passwordInput.type = 'password';
        toggleIcon.classList.remove('bi-eye');
        toggleIcon.classList.add('bi-eye-slash');
      }
    }

    // Submit Form
    document.getElementById('loginForm').addEventListener('submit', function (event) {
      event.preventDefault();
      const form = event.target;
      
      let isValid = true;
      const username = document.getElementById('username');
      const password = document.getElementById('password');

      if (!username.value) {
        username.parentElement.classList.add('is-invalid');
        document.getElementById('usernameFeedback').style.display = 'block';
        isValid = false;
      } else {
        username.parentElement.classList.remove('is-invalid');
        document.getElementById('usernameFeedback').style.display = 'none';
      }

      if (!password.value) {
        password.parentElement.classList.add('is-invalid');
        document.getElementById('passwordFeedback').style.display = 'block';
        isValid = false;
      } else {
        password.parentElement.classList.remove('is-invalid');
        document.getElementById('passwordFeedback').style.display = 'none';
      }

      if (isValid) {
        const btn = document.querySelector('.btn-primary-modern');
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Đang xử lý...';
        btn.disabled = true;

        // Gửi request đến server
        fetch('@Url.Action("Authenticate", "Login")', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            username: username.value,
            password: password.value
          })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Hiển thị thông báo thành công
            btn.innerHTML = '<i class="bi bi-check-circle me-2"></i> Thành công!';
            btn.classList.remove('btn-primary-modern');
            btn.classList.add('btn-success');
            
            // Redirect sau 500ms
            setTimeout(() => {
              window.location.href = data.redirectUrl;
            }, 500);
          } else {
            // Hiển thị lỗi
            alert(data.message);
            btn.innerHTML = 'Đăng Nhập';
            btn.disabled = false;
          }
        })
        .catch(error => {
          alert('Lỗi kết nối: ' + error);
          btn.innerHTML = 'Đăng Nhập';
          btn.disabled = false;
        });
      }
    });

    // Xóa lỗi khi người dùng bắt đầu nhập
    const inputs = document.querySelectorAll('.custom-input');
    inputs.forEach(input => {
      input.addEventListener('input', function () {
        this.parentElement.classList.remove('is-invalid');
        const feedbackId = this.id + 'Feedback';
        document.getElementById(feedbackId).style.display = 'none';
      });
    });

    // Phát hiện autofill và thay đổi màu
    function checkAutofill() {
      inputs.forEach(input => {
        try {
          const isAutofilled = input.matches(':-webkit-autofill');
          if (isAutofilled) {
            input.parentElement.classList.add('has-autofill');
          } else {
            input.parentElement.classList.remove('has-autofill');
          }
        } catch (e) {
          // Fallback cho trình duyệt không hỗ trợ
        }
      });
    }

    setTimeout(checkAutofill, 100);
    setTimeout(checkAutofill, 500);
    
    inputs.forEach(input => {
      input.addEventListener('change', checkAutofill);
      input.addEventListener('input', checkAutofill);
      input.addEventListener('animationstart', function(e) {
        if (e.animationName === 'onAutoFillStart') {
          this.parentElement.classList.add('has-autofill');
        }
      });
    });
  </script>
</body>

</html>
