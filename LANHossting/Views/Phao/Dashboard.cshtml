@model LANHossting.ViewModels.Buoy.PhaoIndexViewModel
@{
    ViewData["Title"] = "VMS - Quản Lý Phao";
    Layout = "_MainLayout";
}

@section Styles {
<style>
        .stat-card {
            background: white;
            border-radius: var(--border-radius);
            border: none;
            padding: 20px;
            box-shadow: var(--card-shadow);
            transition: 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        }
        .stat-icon {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }
        .table-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            border: none;
            overflow: hidden;
        }
        .table-custom thead th {
            background: #f8fafc;
            color: #64748b;
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 700;
            padding: 16px;
            border-bottom: 1px solid #e2e8f0;
            white-space: nowrap;
        }
        .table-custom td {
            padding: 16px;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
            font-size: 0.9rem;
            white-space: nowrap;
        }
        .table-custom tr:hover td {
            background-color: #f8fafc;
        }
        .btn-modern {
            border-radius: 10px;
            font-weight: 600;
            padding: 10px 20px;
            transition: 0.2s;
            border: none;
        }
        .search-input {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 10px 16px 10px 40px;
            width: 100%;
            transition: 0.2s;
        }
        .search-input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
            outline: none;
        }
        .badge-status {
            padding: 6px 10px;
            border-radius: 30px;
            font-size: 0.7rem;
            font-weight: 700;
            letter-spacing: 0.5px;
        }
        .badge-active { background: #dcfce7; color: #166534; }
        .badge-maint { background: #fef9c3; color: #854d0e; }
        .action-btn {
            width: 32px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            color: #64748b;
            transition: 0.2s;
            background: transparent;
            border: 1px solid transparent;
        }
        .action-btn:hover { background: #f1f5f9; color: var(--primary); transform: scale(1.1); }
        .action-btn-edit:hover { color: var(--warning); }
        .action-btn-delete:hover { color: var(--danger); background: #fef2f2; }
        .animate-fade-in {
            animation: fadeIn 0.4s ease-out forwards;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ── Fixed-size modals ── */
        #phaoDetailModal .modal-content,
        #phaoEditModal .modal-content {
            min-height: 520px;
            max-height: 80vh;
        }
        #phaoDetailModal .modal-body,
        #phaoEditModal .modal-body {
            overflow-y: auto;
            min-height: 380px;
        }
        #phaoDetailModal .tab-content,
        #phaoEditModal .tab-content {
            min-height: 280px;
        }

        /* Toast notification */
        .toast-container { position: fixed; top: 90px; right: 20px; z-index: 9999; }
    </style>
}

    <!-- ═══════════════════ TOAST ═══════════════════ -->
    <div class="toast-container" id="toastContainer"></div>

    <!-- ═══════════════════ MAIN CONTENT ═══════════════════ -->
    <div class="container-fluid px-4 pb-5">

        <!-- ── Header ── -->
        <div class="d-flex justify-content-between align-items-end mb-4 animate-fade-in">
            <div>
                <h4 class="fw-bold mb-1 text-dark">Quản Lý Hệ Thống Phao</h4>
                <div class="text-muted small">Danh sách các phao báo hiệu hàng hải trong khu vực quản lý.</div>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("LichSu", "Phao")" class="btn btn-light border fw-bold text-secondary btn-modern">
                    <i class="bi bi-clock-history me-1"></i> Vòng đời phao
                </a>
                <a href="@Url.Action("DieuPhoi", "Phao")" class="btn btn-light border fw-bold text-secondary btn-modern">
                    <i class="bi bi-geo-alt me-1"></i> Điều Phối
                </a>
            </div>
        </div>

        <!-- ── Stats Cards (3 cards, no Dự Phòng) ── -->
        <div class="row g-4 mb-4 animate-fade-in" style="animation-delay: 0.1s;">
            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center gap-3">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary"><i class="bi bi-layers-fill"></i></div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.65rem;">Tổng Số Phao</h6>
                        <h4 class="fw-bold mb-0" id="statTongSo">@Model.ThongKe.TongSoPhao</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center gap-3">
                    <div class="stat-icon bg-success bg-opacity-10 text-success"><i class="bi bi-check-circle-fill"></i></div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.65rem;">Trên Luồng</h6>
                        <h4 class="fw-bold mb-0" id="statTrenLuong">@Model.ThongKe.SoPhaoTrenLuong</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center gap-3">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning"><i class="bi bi-wrench-adjustable"></i></div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.65rem;">Bảo Trì / Sự Cố</h6>
                        <h4 class="fw-bold mb-0" id="statBaoTri">@(Model.ThongKe.SoPhaoBaoTri + Model.ThongKe.SoPhaoSuCo)</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- ── Table ── -->
        <div class="table-card animate-fade-in" style="animation-delay: 0.2s;">
            <!-- Search & Filter Bar -->
            <div class="p-3 border-bottom border-light bg-white d-flex flex-wrap gap-3 align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3 flex-grow-1">
                    <div class="position-relative" style="min-width: 300px;">
                        <i class="bi bi-search position-absolute text-muted" style="left: 12px; top: 11px;"></i>
                        <input type="text" class="search-input" id="searchInput"
                               value="@Model.SearchTerm"
                               placeholder="Tìm kiếm theo ký hiệu, mã phao, loại phao...">
                    </div>
                    <select class="form-select border-light bg-light fw-semibold text-secondary"
                            style="width: auto; border-radius: 12px;" id="routeFilter">
                        <option value="">Tất cả tuyến</option>
                        @foreach (var tuyen in Model.DanhSachTuyenLuong)
                        {
                            var isSelected = Model.SelectedTuyenLuongId == tuyen.Id;
                            if (isSelected)
                            {
                                <option value="@tuyen.Id" selected>@tuyen.TenTuyen (@tuyen.MaTuyen)</option>
                            }
                            else
                            {
                                <option value="@tuyen.Id">@tuyen.TenTuyen (@tuyen.MaTuyen)</option>
                            }
                        }
                    </select>
                </div>
                <div class="text-muted small fw-bold">
                    Tổng: <span class="text-primary" id="totalCount">@Model.DanhSachPhao.Count</span> phao
                </div>
            </div>

            <!-- Data Table -->
            <div class="table-responsive">
                <table class="table table-custom w-100 align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4 text-center" width="5%">STT</th>
                            <th width="14%">Ký hiệu</th>
                            <th width="11%">Mã phao</th>
                            <th width="9%" class="text-center">Đường kính (m)</th>
                            <th width="14%">Vị trí hiện tại</th>
                            <th width="11%">Tuyến luồng</th>
                            <th width="11%">Sửa chữa gần nhất</th>
                            <th width="10%" class="text-center">Trạng thái</th>
                            <th width="15%" class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="buoyTableBody">
                        @if (Model.DanhSachPhao.Any())
                        {
                            var index = 0;
                            @foreach (var phao in Model.DanhSachPhao)
                            {
                                index++;
                                <tr class="animate-fade-in" style="animation-delay: @(index * 0.03)s" data-id="@phao.Id">
                                    <td class="text-center ps-4 fw-bold text-muted">@index</td>
                                    <td>
                                        <div class="fw-bold text-dark">@phao.KyHieuTaiSan</div>
                                        <div class="small text-muted" style="font-size: 0.75rem;">@phao.MaLoaiPhao</div>
                                    </td>
                                    <td class="fw-semibold text-primary">@phao.MaPhaoDayDu</td>
                                    <td class="text-center font-monospace text-muted">
                                        @(phao.DuongKinhPhao?.ToString("F2") ?? "--")
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(phao.ViTriHienTai))
                                        {
                                            <div class="small fw-bold text-dark">
                                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>@phao.ViTriHienTai
                                            </div>
                                            @if (!string.IsNullOrEmpty(phao.ToaDo))
                                            {
                                                <div class="small text-muted ms-3">@phao.ToaDo</div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted small">--</span>
                                        }
                                    </td>
                                    <td class="small fw-semibold text-secondary">
                                        @(phao.TuyenLuong ?? "--")
                                    </td>
                                    <td class="small fw-bold text-dark">
                                        @(phao.NgaySuaChuaGanNhat?.ToString("dd/MM/yyyy") ?? "--")
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-status @phao.TrangThaiHienThiClass">
                                            @phao.TrangThaiHienTai
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-1">
                                            <button class="action-btn" title="Xem chi tiết"
                                                    onclick="viewPhaoDetail(@phao.Id)">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="action-btn action-btn-edit" title="Chỉnh sửa"
                                                    onclick="openEditModal(@phao.Id)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="action-btn action-btn-delete" title="Xóa"
                                                    onclick="confirmDelete(@phao.Id, '@phao.KyHieuTaiSan')">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox fs-1 d-block mb-2 text-secondary"></i>
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                    {
                                        <span>Không tìm thấy phao nào phù hợp với "<strong>@Model.SearchTerm</strong>"</span>
                                    }
                                    else
                                    {
                                        <span>Chưa có dữ liệu phao trong hệ thống.</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="px-4 py-3 border-top border-light d-flex justify-content-between align-items-center bg-white">
                <div class="text-muted small fw-bold">
                    Hiển thị <span class="text-primary" id="displayCount">@Model.DanhSachPhao.Count</span> phao
                </div>
            </div>
        </div>
    </div>

    <!-- ═══════════════════ DETAIL MODAL (fixed size) ═══════════════════ -->
    <div class="modal fade" id="phaoDetailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title fw-bold text-primary">Thông Tin Phao Báo Hiệu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-2">
                    <div id="modalLoading" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status"></div>
                        <div class="mt-2 text-muted">Đang tải...</div>
                    </div>
                    <div id="modalContent" class="d-none">
                        <ul class="nav nav-tabs mb-4" role="tablist" style="border-bottom: 2px solid #f1f5f9;">
                            <li class="nav-item">
                                <button class="nav-link active fw-semibold" data-bs-toggle="tab" data-bs-target="#tabGeneral">Thông tin chung</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#tabXich">Xích & Rùa</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#tabDen">Đèn báo hiệu</button>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tabGeneral">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Ký hiệu tài sản</label>
                                        <div class="fw-bold text-primary fs-6" id="dtKyHieu">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Mã phao đầy đủ</label>
                                        <div class="fw-bold" id="dtMaPhao">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Loại phao</label>
                                        <div id="dtLoaiPhao">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Trạng thái</label>
                                        <div id="dtTrangThai">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Đường kính (m)</label>
                                        <div id="dtDuongKinh">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Chiều cao toàn bộ (m)</label>
                                        <div id="dtChieuCao">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Hình dạng</label>
                                        <div id="dtHinhDang">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Vật liệu</label>
                                        <div id="dtVatLieu">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Màu sắc</label>
                                        <div id="dtMauSac">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Vị trí hiện tại</label>
                                        <div id="dtViTri">--</div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-muted small fw-bold text-uppercase">Tuyến luồng</label>
                                        <div id="dtTuyen">--</div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tabXich">
                                <h6 class="fw-bold text-secondary border-bottom pb-2 mb-3">XÍCH PHAO</h6>
                                <div class="row g-3 mb-4">
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Đường kính (Ø mm)</label>
                                        <div id="dtXichPhao_DK">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Chiều dài (m)</label>
                                        <div id="dtXichPhao_CD">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Thời điểm sử dụng</label>
                                        <div id="dtXichPhao_SD">--</div>
                                    </div>
                                </div>
                                <h6 class="fw-bold text-secondary border-bottom pb-2 mb-3">XÍCH RÙA</h6>
                                <div class="row g-3 mb-4">
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Đường kính (Ø mm)</label>
                                        <div id="dtXichRua_DK">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Chiều dài (m)</label>
                                        <div id="dtXichRua_CD">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Thời điểm sử dụng</label>
                                        <div id="dtXichRua_SD">--</div>
                                    </div>
                                </div>
                                <h6 class="fw-bold text-secondary border-bottom pb-2 mb-3">RÙA</h6>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Trọng lượng (kg)</label>
                                        <div id="dtRua_TL">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Thời điểm sử dụng</label>
                                        <div id="dtRua_SD">--</div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="tabDen">
                                <h6 class="fw-bold text-secondary border-bottom pb-2 mb-3">ĐÈN BÁO HIỆU</h6>
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Chủng loại</label>
                                        <div id="dtDen_CL">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Kết nối AIS</label>
                                        <div id="dtDen_AIS">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Đặc tính ánh sáng</label>
                                        <div id="dtDen_AS">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Chiếu xa tầm sáng (hải lý)</label>
                                        <div id="dtDen_CX">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Nguồn năng lượng</label>
                                        <div id="dtDen_NL">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Thời điểm sử dụng</label>
                                        <div id="dtDen_SD">--</div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted small fw-bold">Sửa chữa gần nhất</label>
                                        <div id="dtDen_SC">--</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top-0 pt-0">
                    <button type="button" class="btn btn-light fw-bold" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- ═══════════════════ EDIT MODAL ═══════════════════ -->
    <div class="modal fade" id="phaoEditModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header pb-0 border-bottom-0">
                    <h5 class="modal-title fw-bold text-warning"><i class="bi bi-pencil-square me-2"></i>Chỉnh Sửa Phao</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-2">
                    <div id="editLoading" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status"></div>
                        <div class="mt-2 text-muted">Đang tải...</div>
                    </div>
                    <div id="editContent" class="d-none">
                        <input type="hidden" id="editId">
                        <ul class="nav nav-tabs mb-4" role="tablist" style="border-bottom: 2px solid #f1f5f9;">
                            <li class="nav-item">
                                <button class="nav-link active fw-semibold" data-bs-toggle="tab" data-bs-target="#editTabGeneral">Thông tin chung</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#editTabXich">Xích & Rùa</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#editTabDen">Đèn báo hiệu</button>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <!-- Edit Tab: Thông tin chung -->
                            <div class="tab-pane fade show active" id="editTabGeneral">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label small fw-bold">Ký hiệu tài sản</label>
                                        <input type="text" class="form-control form-control-sm" id="edKyHieu" maxlength="50">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label small fw-bold">Mã phao đầy đủ <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control form-control-sm" id="edMaPhao" maxlength="50" required>
                                    </div>
                                    <div class="col-md-4">
