@model LANHossting.ViewModels.Buoy.PhaoIndexViewModel
@{
    ViewData["Title"] = "VMS - Quản Lý Phao";
    Layout = "_MainLayout";
}

@section Styles {
<style>
        .stat-card {
            background: white;
            border-radius: var(--border-radius);
            border: none;
            padding: 20px;
            box-shadow: var(--card-shadow);
            transition: 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        }
        .stat-icon {
            width: 45px;
            height: 45px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }
        .table-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            border: none;
            overflow: hidden;
        }
        .table-custom thead th {
            background: #f8fafc;
            color: #64748b;
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 700;
            padding: 16px;
            border-bottom: 1px solid #e2e8f0;
            white-space: nowrap;
        }
        .table-custom td {
            padding: 16px;
            vertical-align: middle;
            border-bottom: 1px solid #f1f5f9;
            font-size: 0.9rem;
            white-space: nowrap;
        }
        .table-custom tr:hover td {
            background-color: #f8fafc;
        }
        .btn-modern {
            border-radius: 10px;
            font-weight: 600;
            padding: 10px 20px;
            transition: 0.2s;
            border: none;
        }
        .search-input {
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 10px 16px 10px 40px;
            width: 100%;
            transition: 0.2s;
        }
        .search-input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
            outline: none;
        }
        .badge-status {
            padding: 6px 10px;
            border-radius: 30px;
            font-size: 0.7rem;
            font-weight: 700;
            letter-spacing: 0.5px;
        }
        .badge-active { background: #dcfce7; color: #166534; }
        .badge-maint { background: #fef9c3; color: #854d0e; }
        .action-btn {
            width: 32px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            color: #64748b;
            transition: 0.2s;
            background: transparent;
            border: 1px solid transparent;
        }
        .action-btn:hover { background: #f1f5f9; color: var(--primary); transform: scale(1.1); }
        .action-btn-edit:hover { color: var(--warning); }
        .action-btn-delete:hover { color: var(--danger); background: #fef2f2; }
        .animate-fade-in {
            animation: fadeIn 0.4s ease-out forwards;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ── Fixed-size modals ── */
        #phaoDetailModal .modal-content,
        #phaoEditModal .modal-content {
            min-height: 620px;
            max-height: 85vh;
        }
        #phaoDetailModal .modal-body,
        #phaoEditModal .modal-body {
            overflow-y: auto;
            min-height: 460px;
        }
        #phaoDetailModal .tab-content,
        #phaoEditModal .tab-content {
            min-height: 380px;
        }

        /* ── Detail modal readability ── */
        .detail-section-title {
            font-size: 0.8rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #475569;
            border-bottom: 2px solid #e2e8f0;
            padding-bottom: 8px;
            margin-bottom: 16px;
            margin-top: 8px;
        }
        .detail-section-title i { margin-right: 6px; color: var(--primary); }
        .detail-label {
            font-size: 0.78rem;
            font-weight: 700;
            text-transform: uppercase;
            color: #94a3b8;
            margin-bottom: 2px;
            letter-spacing: 0.3px;
        }
        .detail-value {
            font-size: 1rem;
            font-weight: 600;
            color: #1e293b;
            min-height: 24px;
        }
        .detail-value.text-primary { color: var(--primary) !important; }
        .detail-pair { margin-bottom: 14px; }

        /* ── Edit dropdown readonly coords ── */
        .coord-display {
            background: #f8fafc;
            border: 1px dashed #cbd5e1;
            border-radius: 8px;
            padding: 8px 12px;
            font-family: 'Courier New', monospace;
            font-weight: 600;
            color: #475569;
            font-size: 0.9rem;
        }

        /* Toast notification */
        .toast-container { position: fixed; top: 90px; right: 20px; z-index: 9999; }

        /* ── Blue enterprise theme (#0d6efd) ── */
        #phaoEditModal .modal-title { color: #0d6efd !important; }
        #phaoEditModal .nav-link.active {
            color: #0d6efd !important;
            border-bottom-color: #0d6efd !important;
        }
        #phaoEditModal .nav-link:hover { color: #0d6efd; }
        #phaoEditModal .detail-section-title i { color: #0d6efd; }
        #phaoDetailModal .modal-title { color: #0d6efd !important; }
        #phaoDetailModal .nav-link.active {
            color: #0d6efd !important;
            border-bottom-color: #0d6efd !important;
        }
        #phaoDetailModal .nav-link:hover { color: #0d6efd; }
        #phaoDetailModal .detail-section-title i { color: #0d6efd; }
    </style>
}

    <!-- ═══════════════════ TOAST ═══════════════════ -->
    <div class="toast-container" id="toastContainer"></div>

    <!-- ═══════════════════ MAIN CONTENT ═══════════════════ -->
    <div class="container-fluid px-4 pb-5">

        <!-- ── Header ── -->
        <div class="d-flex justify-content-between align-items-end mb-4 animate-fade-in">
            <div>
                <h4 class="fw-bold mb-1 text-dark">Quản Lý Hệ Thống Phao</h4>
                <div class="text-muted small">Danh sách các phao báo hiệu hàng hải trong khu vực quản lý.</div>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("LichSu", "Phao")" class="btn btn-light border fw-bold text-secondary btn-modern">
                    <i class="bi bi-clock-history me-1"></i> Vòng đời phao
                </a>
                <a href="@Url.Action("DieuPhoi", "Phao")" class="btn btn-light border fw-bold text-secondary btn-modern">
                    <i class="bi bi-geo-alt me-1"></i> Điều Phối
                </a>
            </div>
        </div>

        <!-- ── Stats Cards (3 cards, no Dự Phòng) ── -->
        <div class="row g-4 mb-4 animate-fade-in" style="animation-delay: 0.1s;">
            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center gap-3">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary"><i class="bi bi-layers-fill"></i></div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.65rem;">Tổng Số Phao</h6>
                        <h4 class="fw-bold mb-0" id="statTongSo">@Model.ThongKe.TongSoPhao</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center gap-3">
                    <div class="stat-icon bg-success bg-opacity-10 text-success"><i class="bi bi-check-circle-fill"></i></div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.65rem;">Trên Luồng</h6>
                        <h4 class="fw-bold mb-0" id="statTrenLuong">@Model.ThongKe.SoPhaoTrenLuong</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card d-flex align-items-center gap-3">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning"><i class="bi bi-wrench-adjustable"></i></div>
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.65rem;">Bảo Trì / Sự Cố</h6>
                        <h4 class="fw-bold mb-0" id="statBaoTri">@(Model.ThongKe.SoPhaoBaoTri + Model.ThongKe.SoPhaoSuCo)</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- ── Table ── -->
        <div class="table-card animate-fade-in" style="animation-delay: 0.2s;">
            <!-- Search & Filter Bar -->
            <div class="p-3 border-bottom border-light bg-white d-flex flex-wrap gap-3 align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3 flex-grow-1">
                    <div class="position-relative" style="min-width: 300px;">
                        <i class="bi bi-search position-absolute text-muted" style="left: 12px; top: 11px;"></i>
                        <input type="text" class="search-input" id="searchInput"
                               value="@Model.SearchTerm"
                               placeholder="Tìm kiếm theo ký hiệu, mã phao, loại phao...">
                    </div>
                    <select class="form-select border-light bg-light fw-semibold text-secondary"
                            style="width: auto; border-radius: 12px;" id="routeFilter">
                        <option value="">Tất cả tuyến</option>
                        @foreach (var tuyen in Model.DanhSachTuyenLuong)
                        {
                            var isSelected = Model.SelectedTuyenLuongId == tuyen.Id;
                            if (isSelected)
                            {
                                <option value="@tuyen.Id" selected>@tuyen.TenTuyen (@tuyen.MaTuyen)</option>
                            }
                            else
                            {
                                <option value="@tuyen.Id">@tuyen.TenTuyen (@tuyen.MaTuyen)</option>
                            }
                        }
                    </select>
                </div>
                <div class="text-muted small fw-bold">
                    Tổng: <span class="text-primary" id="totalCount">@Model.DanhSachPhao.Count</span> phao
                </div>
            </div>

            <!-- Data Table -->
            <div class="table-responsive">
                <table class="table table-custom w-100 align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4 text-center" width="5%">STT</th>
                            <th width="14%">Ký hiệu</th>
                            <th width="11%">Mã phao</th>
                            <th width="9%" class="text-center">Đường kính (m)</th>
                            <th width="14%">Vị trí hiện tại</th>
                            <th width="11%">Tuyến luồng</th>
                            <th width="11%">Sửa chữa gần nhất</th>
                            <th width="10%" class="text-center">Trạng thái</th>
                            <th width="15%" class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="buoyTableBody">
                        @if (Model.DanhSachPhao.Any())
                        {
                            var index = 0;
                            @foreach (var phao in Model.DanhSachPhao)
                            {
                                index++;
                                <tr class="animate-fade-in" style="animation-delay: @(index * 0.03)s" data-id="@phao.Id">
                                    <td class="text-center ps-4 fw-bold text-muted">@index</td>
                                    <td>
                                        <div class="fw-bold text-dark">@phao.KyHieuTaiSan</div>
                                        <div class="small text-muted" style="font-size: 0.75rem;">@phao.MaLoaiPhao</div>
                                    </td>
                                    <td class="fw-semibold text-primary">@phao.MaPhaoDayDu</td>
                                    <td class="text-center font-monospace text-muted">
                                        @(phao.DuongKinhPhao?.ToString("F2") ?? "--")
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(phao.ViTriHienTai))
                                        {
                                            <div class="small fw-bold text-dark">
                                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>@phao.ViTriHienTai
                                            </div>
                                            @if (!string.IsNullOrEmpty(phao.ToaDo))
                                            {
                                                <div class="small text-muted ms-3">@phao.ToaDo</div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted small">--</span>
                                        }
                                    </td>
                                    <td class="small fw-semibold text-secondary">
                                        @(phao.TuyenLuong ?? "--")
                                    </td>
                                    <td class="small fw-bold text-dark">
                                        @(phao.NgaySuaChuaGanNhat?.ToString("dd/MM/yyyy") ?? "--")
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-status @phao.TrangThaiHienThiClass">
                                            @phao.TrangThaiHienTai
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-1">
                                            <button class="action-btn" title="Xem chi tiết"
                                                    onclick="viewPhaoDetail(@phao.Id)">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="action-btn action-btn-edit" title="Chỉnh sửa"
                                                    onclick="openEditModal(@phao.Id)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            <button class="action-btn action-btn-delete" title="Xóa"
                                                    onclick="confirmDelete(@phao.Id, '@phao.KyHieuTaiSan')">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox fs-1 d-block mb-2 text-secondary"></i>
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                    {
                                        <span>Không tìm thấy phao nào phù hợp với "<strong>@Model.SearchTerm</strong>"</span>
                                    }
                                    else
                                    {
                                        <span>Chưa có dữ liệu phao trong hệ thống.</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="px-4 py-3 border-top border-light d-flex justify-content-between align-items-center bg-white">
                <div class="text-muted small fw-bold">
                    Hiển thị <span class="text-primary" id="displayCount">@Model.DanhSachPhao.Count</span> phao
                </div>
            </div>
        </div>
    </div>

    <!-- ═══════════════════ DETAIL MODAL (fixed size) ═══════════════════ -->
    <div class="modal fade" id="phaoDetailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title fw-bold text-primary">Thông Tin Phao Báo Hiệu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body pt-2">
                    <div id="modalLoading" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status"></div>
                        <div class="mt-2 text-muted">Đang tải...</div>
                    </div>
                    <div id="modalContent" class="d-none">
                        <ul class="nav nav-tabs mb-3" role="tablist" style="border-bottom: 2px solid #f1f5f9;">
                            <li class="nav-item"><button class="nav-link active fw-semibold" data-bs-toggle="tab" data-bs-target="#tabGeneral">Thông tin chung</button></li>
                            <li class="nav-item"><button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#tabXich">Xích & Rùa</button></li>
                            <li class="nav-item"><button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#tabDen">Đèn báo hiệu</button></li>
                            <li class="nav-item"><button class="nav-link fw-semibold" data-bs-toggle="tab" data-bs-target="#tabQuanLy">Quản lý</button></li>
                        </ul>
                        <div class="tab-content">
                            <!-- TAB: Thông tin chung -->
                            <div class="tab-pane fade show active" id="tabGeneral">
                                <div class="detail-section-title"><i class="bi bi-info-circle-fill"></i>ĐỊNH DANH</div>
                                <div class="row">
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Ký hiệu tài sản</div><div class="detail-value text-primary" id="dtKyHieu">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Mã phao đầy đủ</div><div class="detail-value" id="dtMaPhao">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Loại phao</div><div class="detail-value" id="dtLoaiPhao">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Trạng thái</div><div class="detail-value" id="dtTrangThai">--</div></div>
                                </div>
                                <div class="detail-section-title"><i class="bi bi-rulers"></i>KỸ THUẬT</div>
                                <div class="row">
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Đường kính (m)</div><div class="detail-value" id="dtDuongKinh">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Chiều cao toàn bộ (m)</div><div class="detail-value" id="dtChieuCao">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Hình dạng</div><div class="detail-value" id="dtHinhDang">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Vật liệu</div><div class="detail-value" id="dtVatLieu">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Màu sắc</div><div class="detail-value" id="dtMauSac">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Diện tích (m²)</div><div class="detail-value" id="dtDienTich">--</div></div>
                                </div>
                                <div class="detail-section-title"><i class="bi bi-geo-alt-fill"></i>VỊ TRÍ</div>
                                <div class="row">
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Vị trí hiện tại</div><div class="detail-value" id="dtViTri">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Tuyến luồng</div><div class="detail-value" id="dtTuyen">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Vĩ độ</div><div class="detail-value font-monospace" id="dtViDo">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Kinh độ</div><div class="detail-value font-monospace" id="dtKinhDo">--</div></div>
                                </div>
                                <div class="detail-section-title"><i class="bi bi-calendar-event"></i>THỜI GIAN</div>
                                <div class="row">
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Thời gian sử dụng</div><div class="detail-value" id="dtThoiGianSD">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Thời điểm thay thả</div><div class="detail-value" id="dtThoiDiemThayTha">--</div></div>
                                    <div class="col-md-3 detail-pair"><div class="detail-label">Sửa chữa gần nhất</div><div class="detail-value" id="dtSuaChuaGanNhat">--</div></div>
                                </div>
                            </div>
                            <!-- TAB: Xích & Rùa -->
                            <div class="tab-pane fade" id="tabXich">
                                <div class="detail-section-title"><i class="bi bi-link-45deg"></i>XÍCH PHAO</div>
                                <div class="row">
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Đường kính (Ø mm)</div><div class="detail-value" id="dtXichPhao_DK">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Chiều dài (m)</div><div class="detail-value" id="dtXichPhao_CD">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Thời điểm sử dụng</div><div class="detail-value" id="dtXichPhao_SD">--</div></div>
                                </div>
                                <div class="detail-section-title"><i class="bi bi-link-45deg"></i>XÍCH RÙA</div>
                                <div class="row">
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Đường kính (Ø mm)</div><div class="detail-value" id="dtXichRua_DK">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Chiều dài (m)</div><div class="detail-value" id="dtXichRua_CD">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Thời điểm sử dụng</div><div class="detail-value" id="dtXichRua_SD">--</div></div>
                                </div>
                                <div class="detail-section-title"><i class="bi bi-box-fill"></i>RÙA (NEO CHÌM)</div>
                                <div class="row">
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Trọng lượng (tấn)</div><div class="detail-value" id="dtRua_TL">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Thời điểm sử dụng</div><div class="detail-value" id="dtRua_SD">--</div></div>
                                </div>
                            </div>
                            <!-- TAB: Đèn báo hiệu -->
                            <div class="tab-pane fade" id="tabDen">
                                <div class="detail-section-title"><i class="bi bi-lightbulb-fill"></i>ĐÈN BÁO HIỆU</div>
                                <div class="row">
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Chủng loại</div><div class="detail-value" id="dtDen_CL">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Kết nối AIS</div><div class="detail-value" id="dtDen_AIS">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Đặc tính ánh sáng</div><div class="detail-value" id="dtDen_AS">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Chiếu xa tầm sáng (hải lý)</div><div class="detail-value" id="dtDen_CX">--</div></div>
                                    <div class="col-md-4 detail-pair"><div class="detail-label">Chiều cao tầm sáng hải đồ (m)</div><div class="detail-value" id="dtDen_CCTSHD">--</div></div>
