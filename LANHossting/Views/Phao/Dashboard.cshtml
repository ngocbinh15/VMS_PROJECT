    @section Scripts {
    <script>
        // ══════════════════════════════════════════════
        // URLs
        // ══════════════════════════════════════════════
        const URLS = {
            danhSach: '@Url.Action("DanhSach", "Phao")',
            chiTiet:  '@Url.Action("ChiTietJson", "Phao")',
            capNhat:  '@Url.Action("CapNhat", "Phao")',
            xoa:      '@Url.Action("Xoa", "Phao")',
            dropdownData: '@Url.Action("GetDropdownData", "Phao")',
            viTriByTuyen: '@Url.Action("GetViTriByTuyenLuong", "Phao")',
            checkViTriTrung: '@Url.Action("CheckViTriTrung", "Phao")'
        };

        // ══════════════════════════════════════════════
        // UTILITY
        // ══════════════════════════════════════════════
        function setText(id, val) { document.getElementById(id).textContent = val || '--'; }
        function fmt(v) { return v != null ? parseFloat(v).toFixed(2) : '--'; }
        function fmtDate(v) {
            if (!v) return '--';
            return new Date(v).toLocaleDateString('vi-VN');
        }
        function fmtDateInput(v) {
            if (!v) return '';
            const d = new Date(v);
            return d.toISOString().split('T')[0];
        }
        function getVal(id) { return document.getElementById(id).value; }
        function getNumVal(id) { const v = document.getElementById(id).value; return v === '' ? null : parseFloat(v); }
        function getIntVal(id) { const v = document.getElementById(id).value; return v === '' ? null : parseInt(v); }

        function splitCoords(toaDo) {
            if (!toaDo) return { viDo: '--', kinhDo: '--' };
            const parts = toaDo.trim().split(/\s+/);
            return { viDo: parts[0] || '--', kinhDo: parts[1] || '--' };
        }

        // Dropdown cache
        let _dropdownCache = null;
        function loadDropdownData() {
            if (_dropdownCache) return Promise.resolve(_dropdownCache);
            return fetch(URLS.dropdownData).then(r => r.json()).then(d => { _dropdownCache = d; return d; });
        }
        function populateSelect(selectId, items, selectedVal) {
            const sel = document.getElementById(selectId);
            const firstOpt = sel.options[0]; // keep "-- Chọn --"
            sel.innerHTML = '';
            sel.appendChild(firstOpt);
            items.forEach(it => {
                const opt = document.createElement('option');
                opt.value = it.value;
                opt.textContent = it.text;
                sel.appendChild(opt);
            });
            if (selectedVal != null) sel.value = selectedVal;
        }

        function showToast(message, type = 'success') {
            const container = document.getElementById('toastContainer');
            const icon = type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-circle-fill';
            const bg = type === 'success' ? 'bg-success' : 'bg-danger';
            const html = `<div class="toast align-items-center text-white ${bg} border-0 show" role="alert">
                <div class="d-flex"><div class="toast-body"><i class="bi ${icon} me-2"></i>${message}</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div></div>`;
            container.insertAdjacentHTML('beforeend', html);
            const toast = container.lastElementChild;
            setTimeout(() => toast.remove(), 4000);
        }

        // ══════════════════════════════════════════════
        // AJAX FILTER (search + route)
        // ══════════════════════════════════════════════
        let filterTimeout = null;

        function reloadTable() {
            const search = document.getElementById('searchInput').value.trim();
            const tuyenLuongId = document.getElementById('routeFilter').value;
            const params = new URLSearchParams();
            if (search) params.set('search', search);
            if (tuyenLuongId) params.set('tuyenLuongId', tuyenLuongId);

            fetch(URLS.danhSach + '?' + params.toString())
                .then(r => r.json())
                .then(data => {
                    renderTable(data.items);
                    updateStats(data.thongKe);
                })
                .catch(err => {
                    console.error('Filter error:', err);
                    showToast('Lỗi tải dữ liệu', 'error');
                });
        }

        function renderTable(items) {
            const tbody = document.getElementById('buoyTableBody');
            document.getElementById('totalCount').textContent = items.length;
            document.getElementById('displayCount').textContent = items.length;

