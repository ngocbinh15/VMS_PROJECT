            const isTrenLuong = trangThaiHoatDong === 'Trên luồng';

            const btn = document.getElementById('btnSaveEdit');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Đang lưu...';

