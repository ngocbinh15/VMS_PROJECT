                    document.getElementById('edXichRua_SD').value = fmtDateInput(data.xichRua_ThoiDiemSuDung);
                    document.getElementById('edRua_TL').value = data.rua_TrongLuong ?? '';
                    document.getElementById('edRua_SD').value = fmtDateInput(data.rua_ThoiDiemSuDung);

                    document.getElementById('edDen_CL').value = data.den_ChungLoai || '';
                    document.getElementById('edDen_AIS').value = data.den_KetNoiAIS === true ? 'true' : data.den_KetNoiAIS === false ? 'false' : '';
                    document.getElementById('edDen_AS').value = data.den_DacTinhAnhSang || '';
                    document.getElementById('edDen_CX').value = data.den_ChieuXaTamSang ?? '';
