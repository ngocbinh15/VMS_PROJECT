@{
    ViewData["Title"] = "Quản Trị Hệ Thống";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/dashboard.css" asp-append-version="true">
</head>
<body>

<!-- Toast container -->
<div id="toastContainer" class="toast-container-custom"></div>

<!-- ═══ NAVBAR ═══ -->
<nav class="navbar navbar-light bg-white admin-nav fixed-top shadow-sm">
    <div class="container-fluid px-4 d-flex justify-content-between align-items-center">
        <a class="navbar-brand m-0 p-0" href="#">
            <img src="~/image_2.png"
                 asp-append-version="true"
                 alt="Tổng Công ty Bảo đảm An toàn Hàng hải Việt Nam"
                 height="50">
        </a>

        <div class="d-flex align-items-center gap-3">
            <span class="text-dark small fw-semibold">
                <i class="bi bi-person-circle me-1"></i>@ViewBag.FullName
            </span>

            <button class="btn btn-sm btn-outline-danger rounded-pill px-3 fw-semibold"
                    onclick="logout()">
                <i class="bi bi-box-arrow-right me-1"></i>Đăng Xuất
            </button>
        </div>
    </div>
</nav>

<!-- ═══ SIDEBAR ═══ -->
<aside class="admin-sidebar">
    <nav class="nav flex-column">
        <a class="nav-link active" data-section="sectionOverview" href="#">
            <i class="bi bi-speedometer2"></i>Tổng Quan
        </a>
        <div class="sidebar-divider"></div>
        <a class="nav-link" data-section="sectionTaiKhoan" href="#">
            <i class="bi bi-people"></i>Quản Lý Tài Khoản
        </a>
        <a class="nav-link" data-section="sectionVatLieu" href="#">
            <i class="bi bi-box-seam"></i>Quản Lý Vật Liệu
        </a>
        <div class="sidebar-divider"></div>
        <a class="nav-link" data-section="sectionSystemLog" href="#">
            <i class="bi bi-journal-text"></i>Nhật Ký Nhập – Xuất – Điều Chuyển
        </a>
        <div class="sidebar-divider"></div>
        <a class="nav-link" href="@Url.Action("Dashboard", "Kho")">
            <i class="bi bi-box-seam-fill"></i>Đi tới Kho
        </a>
        <a class="nav-link" href="@Url.Action("Dashboard", "Phao")">
            <i class="bi bi-droplet-fill"></i>Đi tới Phao
        </a>
    </nav>
</aside>

<!-- ═══ MAIN CONTENT ═══ -->
<main class="admin-main">

    <!-- ── SECTION: Tổng Quan ── -->
    <section id="sectionOverview" class="admin-section active">
        <div class="admin-page-header">
            <h4><i class="bi bi-speedometer2 me-2 text-primary"></i>Tổng Quan</h4>
        </div>
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="stat-card" style="cursor:pointer" onclick="goToSection('sectionTaiKhoan')">
                    <div class="stat-icon blue"><i class="bi bi-people-fill"></i></div>
                    <div>
                        <div class="stat-value" id="statTotalAccounts">-</div>
                        <div class="stat-label">Tổng tài khoản</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon green"><i class="bi bi-person-check-fill"></i></div>
                    <div>
                        <div class="stat-value" id="statActiveAccounts">-</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card" style="cursor:pointer" onclick="goToSection('sectionVatLieu')">
                    <div class="stat-icon amber"><i class="bi bi-box-seam-fill"></i></div>
                    <div>
                        <div class="stat-value" id="statTotalMaterials">-</div>
                        <div class="stat-label">Tổng vật liệu</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="admin-card">
                    <div class="card-body text-center py-4">
                        <div class="stat-icon blue mx-auto mb-3"><i class="bi bi-box-seam-fill"></i></div>
                        <h5 class="fw-bold">Quản Lý Kho</h5>
                        <p class="text-muted small mb-3">Quản lý vật liệu, tồn kho, nhập xuất kho</p>
                        <a href="@Url.Action("Dashboard", "Kho")" class="btn btn-primary btn-sm rounded-pill px-4">
                            <i class="bi bi-arrow-right-circle me-1"></i>Truy cập
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="admin-card">
                    <div class="card-body text-center py-4">
                        <div class="stat-icon cyan mx-auto mb-3"><i class="bi bi-droplet-fill"></i></div>
                        <h5 class="fw-bold">Quản Lý Phao</h5>
                        <p class="text-muted small mb-3">Quản lý phao báo hiệu, tuyến luồng, vị trí phao</p>
                        <a href="@Url.Action("Dashboard", "Phao")" class="btn btn-info btn-sm rounded-pill px-4 text-white">
                            <i class="bi bi-arrow-right-circle me-1"></i>Truy cập
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ── SECTION: Quản Lý Tài Khoản ── -->
    <section id="sectionTaiKhoan" class="admin-section">
        <div class="admin-page-header">
            <h4><i class="bi bi-people me-2 text-primary"></i>Quản Lý Tài Khoản</h4>
            <button class="btn btn-primary btn-sm rounded-pill px-3" onclick="openCreateTaiKhoan()">
                <i class="bi bi-plus-lg me-1"></i>Tạo Tài Khoản
            </button>
        </div>

        <div class="admin-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th class="text-center" style="width:45px">#</th>
                                <th>Tên Đăng Nhập</th>
                                <th>Họ Tên</th>
                                <th>Email</th>
                                <th>SĐT</th>
                                <th>Vai Trò</th>
                                <th>Trạng Thái</th>
                                <th style="width:170px">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody id="taiKhoanTableBody">
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">Đang tải...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- ── SECTION: Quản Lý Vật Liệu ── -->
    <section id="sectionVatLieu" class="admin-section">
        <div class="admin-page-header">
            <h4><i class="bi bi-box-seam me-2 text-primary"></i>Quản Lý Vật Liệu</h4>
            <div class="d-flex gap-2 align-items-center">
                <input type="text" class="form-control form-control-sm" id="vatLieuSearchInput"
                       placeholder="Tìm kiếm vật liệu..." style="width:220px; border-radius:8px">
            </div>
        </div>

        <div class="admin-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th class="text-center" style="width:45px">#</th>
                                <th>Mã VL</th>
                                <th>Tên Vật Liệu</th>
                                <th>Nhóm</th>
                                <th>ĐVT</th>
                                <th class="text-end">Đơn Giá</th>
                                <th class="text-end">Mức Tối Thiểu</th>
                                <th>Trạng Thái</th>
                                <th style="width:100px">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody id="vatLieuTableBody">
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">Đang tải...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- ── SECTION: Nhật Ký Nhập – Xuất – Điều Chuyển ── -->
    <section id="sectionSystemLog" class="admin-section">
        <div class="admin-page-header">
            <h4><i class="bi bi-journal-text me-2 text-primary"></i>Nhật Ký Nhập – Xuất – Điều Chuyển</h4>
        </div>

        <!-- Filters -->
        <div class="filter-bar">
            <div>
                <label class="form-label">Từ ngày</label>
                <input type="date" class="form-control form-control-sm" id="logTuNgay" style="width:150px">
            </div>
            <div>
                <label class="form-label">Đến ngày</label>
                <input type="date" class="form-control form-control-sm" id="logDenNgay" style="width:150px">
            </div>
            <div>
                <label class="form-label">Kho</label>
                <select class="form-select form-select-sm" id="logKho" style="width:160px">
                    <option value="">Tất cả kho</option>
                </select>
            </div>
            <div>
                <label class="form-label">Loại phiếu</label>
                <select class="form-select form-select-sm" id="logLoaiPhieu" style="width:150px">
                    <option value="">Tất cả</option>
                    <option value="NHAP_KHO">Nhập kho</option>
                    <option value="XUAT_KHO">Xuất kho</option>
                    <option value="CHUYEN_KHO">Chuyển kho</option>
                </select>
            </div>
            <div>
                <label class="form-label">Tìm vật tư</label>
                <input type="text" class="form-control form-control-sm" id="logSearchVatLieu" placeholder="Tên/mã vật tư..." style="width:160px">
            </div>
            <div class="d-flex gap-1 align-items-end">
                <button class="btn btn-primary btn-sm" onclick="loadSystemLog(1)">
                    <i class="bi bi-search me-1"></i>Lọc
                </button>
                <button class="btn btn-outline-secondary btn-sm" onclick="resetLogFilters()">
                    <i class="bi bi-x-lg me-1"></i>Xóa lọc
                </button>
            </div>
        </div>

        <div class="admin-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Mã Phiếu</th>
                                <th>Loại</th>
                                <th>Kho</th>
                                <th>Người Thực Hiện</th>
                                <th>Ngày</th>
                                <th class="text-center">Số VT</th>
                                <th style="width:80px"></th>
                            </tr>
                        </thead>
                        <tbody id="systemLogTableBody">
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">Đang tải...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="admin-pagination px-3 pb-2" id="logPagination"></div>
            </div>
        </div>
    </section>

</main>

<!-- ═══ MODAL: Tài Khoản (Create / Edit) ═══ -->
<div class="modal fade" id="taiKhoanModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formTaiKhoanTitle">Tạo Tài Khoản Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="formTaiKhoanId">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Tên Đăng Nhập <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="formTenDangNhap" maxlength="50">
                </div>
                <div class="mb-3" id="formMatKhauGroup">
                    <label class="form-label fw-semibold">Mật Khẩu <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="formMatKhau">
                    <small class="text-muted">Tối thiểu 6 ký tự</small>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Họ Tên <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="formHoTen" maxlength="200">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" id="formEmail" maxlength="200">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Số Điện Thoại</label>
                    <input type="text" class="form-control" id="formSoDienThoai" maxlength="20">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Vai Trò <span class="text-danger">*</span></label>
                    <select class="form-select" id="formVaiTroId">
                        <option value="">-- Chọn vai trò --</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-primary btn-sm" onclick="saveTaiKhoan()">
                    <i class="bi bi-check-lg me-1"></i>Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- ═══ MODAL: Reset Password ═══ -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset Mật Khẩu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="resetPasswordTaiKhoanId">
                <p class="small text-muted mb-2">Tài khoản: <strong id="resetPasswordUsername"></strong></p>
                <div class="mb-2">
                    <label class="form-label fw-semibold">Mật Khẩu Mới <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="resetPasswordInput">
                    <small class="text-muted">Tối thiểu 6 ký tự</small>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-warning btn-sm text-white" onclick="doResetPassword()">
                    <i class="bi bi-key me-1"></i>Reset
                </button>
            </div>
        </div>
    </div>
</div>

<!-- ═══ MODAL: Edit Vật Liệu ═══ -->
<div class="modal fade" id="vatLieuModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editVatLieuTitle">Sửa Vật Liệu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editVatLieuId">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Mã Vật Liệu <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="editMaVatLieu" maxlength="50">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Tên Vật Liệu <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="editTenVatLieu">
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Đơn Giá <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="editDonGia" min="0" step="1">
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label class="form-label fw-semibold">Mức Tối Thiểu</label>
                        <input type="number" class="form-control" id="editMucToiThieu" min="0">
                    </div>
                    <div class="col-6 mb-3">
                        <label class="form-label fw-semibold">Mức Tối Đa</label>
                        <input type="number" class="form-control" id="editMucToiDa" min="0">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Ghi Chú</label>
                    <textarea class="form-control" id="editMoTa" rows="2"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-primary btn-sm" onclick="saveVatLieu()">
                    <i class="bi bi-check-lg me-1"></i>Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- ═══ MODAL: Chi Tiết Phiếu (EXACT copy from Kho) ═══ -->
<div class="modal fade" id="transactionDetailModal" tabindex="-1" style="z-index: 1060;">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header border-0 px-4 pt-3 pb-2" id="detailModalHeader">
                <div>
                    <h6 class="modal-title fw-bold mb-1" id="detailModalTitle">Chi Tiết Phiếu</h6>
                    <small id="detailModalSubtitle" class="text-muted">...</small>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body px-4 py-0">
                <!-- ── PHIẾU INFO CARDS ── -->
                <div class="row g-2 mb-3" id="detailInfoCards"></div>

                <!-- ── DETAIL TABLE ── -->
                <div class="table-responsive" style="max-height: 400px;">
                    <table class="table table-striped table-hover mb-0 align-middle small">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th class="ps-3">Vật tư</th>
                                <th>Kho</th>
                                <th class="text-center">Loại</th>
                                <th class="text-end">SL trước</th>
                                <th class="text-end">Thay đổi</th>
                                <th class="text-end">SL sau</th>
                                <th>Thời gian</th>
                                <th class="text-end pe-3">Người TH</th>
                            </tr>
                        </thead>
                        <tbody id="detailTableBody"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer border-0 py-2 px-4">
                <button type="button" class="btn btn-sm btn-secondary fw-bold" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/admin/dashboard.api.js" asp-append-version="true"></script>
<script src="~/js/admin/dashboard.ui.js" asp-append-version="true"></script>
<script src="~/js/admin/dashboard.events.js" asp-append-version="true"></script>

</body>
</html>
